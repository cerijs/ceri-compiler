{
  "name": "ceri-compiler",
  "description": "compiles template strings for ceriJS",
  "version": "1.1.1",
  "homepage": "https://github.com/cerijs/",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "license": "MIT",
  "bin": {
    "ceri-compiler": "./cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cerijs/ceri-compiler"
  },
  "engines": {
    "node": "*"
  },
  "files": [
    "lib/*.js",
    "cli.js"
  ],
  "main": "lib/index.js",
  "dependencies": {
    "acorn": "^5.0.3",
    "babili-webpack-plugin": "^0.1.2",
    "ceri-loader": "^1.1.0",
    "commander": "^2.11.0",
    "consolidate": "^0.14.5",
    "escodegen": "^1.8.1",
    "htmlparser2": "^3.9.2",
    "webpack": "^3.0.0",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "coffeescript": "^2.0.0-beta2",
    "mocha": "^3.4.2",
    "pug": "^2.0.0-rc.2",
    "rimraf": "^2.6.1",
    "script-runner": "^0.1.7"
  },
  "keywords": [
    "ceri",
    "component",
    "compiler",
    "cli"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "clean": "rimraf lib/*",
    "prebuild": "npm run clean",
    "build": "coffee --no-header --compile --output lib/ src/*.coffee",
    "watch": "run-npm -p watch:*",
    "watch:coffee": "coffee --no-header --compile --watch --output lib/ src/*.coffee",
    "watch:mocha": "mocha --watch",
    "test": "mocha",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish"
  }
}
